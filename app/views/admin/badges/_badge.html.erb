<tr>
  <td>
    <%=image_tag(badge.file, height: '32', width: '32',  class: 'image')%>
  </td>
  <td>
    <%= badge.title %>
  </td>
  <td>
    <%= badge.rule %>
  </td>
  <td>
    <%= link_to t('.show'), admin_badge_path(badge), class: "btn btn-primary" %>
    <%= link_to t('.edit'), edit_admin_badge_path(badge), class: "btn btn-primary" %>
    <%= button_to t('.delete'), admin_badge_path(badge), method: :delete, class: "btn btn-danger" %>
  </td>
</tr>