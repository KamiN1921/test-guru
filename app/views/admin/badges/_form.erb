<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <div class="mt-2">
    <%= form.label :title %>
    <%= form.text_field :title%>
  </div>
  <div class="mt-2">
    <%= form.label :file %>
    <%= form.text_field :file%>
  </div>
  <div class="mt-2">
    <%= form.label :rule %>
    <%= form.select :rule, Badge::RULES %>
  </div>
  <div class="mt-2 hide params params-category">
    <%= form.label :param %>
    <%= form.select(:param) do %>
      <% Category.select(:title,:id).distinct.each do |c| -%>
        <%= content_tag(:option, c.title, value: c.id) %>
      <% end %>
    <% end %>
  </div>
  <div class="mt-2 params hide params-level">
    <%= form.label :param %>
    <%= form.number_field :param, in: 0..10, value: 0%>
  </div>
  <div class="mt-2">
    <%= form.submit t('.submit'), class: "btn btn-primary" %>
  </div>
<% end %>