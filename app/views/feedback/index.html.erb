<%= form_with  url: feedback_index_path, method: :post, local: true, class:"mx-auto mt-5 col-5 center mb-5" do |form| %>
  <div class="form-group">
    <%= form.label :subj, t('.subj') %>
    <%= form.text_field :subj, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :name, t('.name') %>
    <%= form.text_field :name ,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :email, t('.email') %>
    <%= form.text_field :email, class: "form-control"%>
  </div>

  <br>
  <%= form.submit t('.send'), class: "btn btn-primary" %>
<% end %>

<%= link_to t('.back'), root_path %>