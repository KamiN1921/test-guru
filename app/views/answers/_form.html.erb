<%= form_with model: [@question,@answer], data: {turbo: false}, local: true do |form| %>
  <p>
  <%= form.label :body %>
  <%= form.text_area :body, id: :answer_body, rows: 7, cols:60 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct%>
  </p>

  <%if @answer.errors.present? %>
    <div>
      <h2><%= pluralize(@answer.errors.count, 'error') %> detected:</h2>
      <ul>
        <%@answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
